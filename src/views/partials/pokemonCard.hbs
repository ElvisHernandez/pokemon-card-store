<div 
    class="col-span-4 card card-compact bg-base-100 shadow-xl" 
    hx-get="/pokemon-card/{{this.id}}" 
    hx-trigger="cart-update-{{this.id}} from:body" 
    hx-swap="outerHTML"
>
    <figure><img src="{{this.imgUrl}}" alt="Shoes" /></figure>
    <div class="card-body">
        <h2 class="card-title">{{this.name}}</h2>
        <p class="font-semibold">{{this.price}}</p>
        <div class="card-actions justify-end items-center">

            {{#if this.isInCart }}
                <button 
                    class="btn rounded-full w-[50px] h-[50px]"
                    hx-put="/cart"
                    hx-vals='{ "id": {{this.id}}, "add": false }'
                    hx-target="#main-nav"
                    hx-swap="outerHTML"
                >
                    -
                </button>
                <div class="badge badge-info">+{{ this.amountInCart }}</div>
                <button 
                    class="btn rounded-full w-[50px] h-[50px]"
                    hx-put="/cart"
                    hx-vals='{ "id": {{this.id}}, "add": true }'
                    hx-target="#main-nav"
                    hx-swap="outerHTML"
                >
                    +
                </button>
            {{else}}
                <button 
                    class="btn btn-primary"
                    hx-put="/cart"
                    hx-vals='{ "id": {{this.id}}, "add": true }'
                    hx-target="#main-nav"
                    hx-swap="outerHTML"
                >
                    Buy Now
                </button>
            {{/if}}

        </div>
    </div>
</div>