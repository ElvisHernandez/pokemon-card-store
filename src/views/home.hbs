<html lang="en">
{{>_head}}

<body class="mx-[128px] my-[32px]">

    {{> nav}}

    <div class="grid grid-cols-4 md:grid-cols-8 lg:grid-cols-12 gap-[32px] my-[32px]">

        {{#each pokemonCards}}

            <div class="col-span-4 card card-compact bg-base-100 shadow-xl">
                <figure><img src="{{this.imgUrl}}" alt="Shoes" /></figure>
                <div class="card-body">
                    <h2 class="card-title">{{this.name}}</h2>
                    <p>{{this.price}}</p>
                    <div class="card-actions justify-end">
                    <button class="btn btn-primary">Buy Now</button>
                    </div>
                </div>
            </div>
        {{/each}}
    </div>
</body>

</html>